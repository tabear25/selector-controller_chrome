{
  "manifest_version": 3,
  "name": "Selector-Collector",
  "version": "0.8.0",
  "action": { "default_popup": "popup/popup.html" },
  "icons": {
    "16": "assets/icons/for_toolbar.png",
    "48": "assets/icons/for_management.png",
    "128": "assets/icons/for_chromestore.png"
 },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}