{
  "manifest_version": 3,
  "name": "Selector Collector",
  "description": "Click‑to‑collect ordered CSS/XPath selectors & copy to clipboard.",
  "version": "1.0.0",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ],

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "action": {
    "default_title": "Selector Collector",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}